{
  "expo": {
    "name": "LEORA",
    "slug": "leora",
    "version": "1.1.0",
    "runtimeVersion": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon1.png",
    "scheme": "leora",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/iphone-splash-preview-dark.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sarvar.leora",
      "appleTeamId": "APPLE_TEAM_ID",
      "icon": "./assets/images/icon1.png",
      "buildNumber": "1.2.0",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.sarvaryarbekov.leora",
          "group.com.sarvaryarbekov.leora"
        ]
      },
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "NSCameraUsageDescription": "LEORA needs access to your camera to capture receipts and documents.",
        "NSMicrophoneUsageDescription": "LEORA needs access to your microphone for voice commands.",
        "NSFaceIDUsageDescription": "LEORA uses Face ID to securely access your data.",
        "NSPhotoLibraryUsageDescription": "LEORA needs access to your photo library.",
        "NSPhotoLibraryAddUsageDescription": "LEORA needs permission to save images.",
        "UIBackgroundModes": [
          "audio",
          "audio"
        ],
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": false,
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.sarvar.leora",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.VIBRATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      "expo-router",
      "@bacons/apple-targets",
      [
        "expo-splash-screen",
        {
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow LEORA to use Face ID for secure access."
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow LEORA to access your microphone.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "bundleIdentifier": "com.sarvar.leora.widget",
                  "targetName": "FocusLiveActivity",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.sarvaryarbekov.leora"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "5fc69c21-4008-47b3-9596-141e41d86b74"
      }
    }
  }
}
